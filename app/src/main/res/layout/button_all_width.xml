<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="text" type="java.lang.String" />
    </data>

    <LinearLayout android:id="@+id/layout_edit_expense" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="20dp"
        android:orientation="horizontal" android:weightSum="2">


        <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="-1" android:visibility="gone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/greenColor"
            android:onClick="showAddExpenseActivity"
            android:text="@{text}"
            android:textColor="@color/blackColor" />
    </LinearLayout>

</layout>