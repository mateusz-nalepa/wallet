<layout>

    <data>

        <variable
            name="viewModel"
            type="com.mateuszcholyn.wallet.ui.message.SummaryAdapterModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <!-- first Child Layout -->

        <!-- create a Linear Layout with horizontal orientation and weightSum property -->
        <LinearLayout
            android:id="@+id/summaryExpenseShortDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- place one TextView and one EditText inside layout using weight property -->

            <ImageView
                android:id="@+id/history_show_or_hide"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:src="@drawable/navigation_burger"
                android:textColor="@color/blackColor"
                android:textSize="24dp" />
            <!--            android:textAlignment="textEnd"-->

            <TextView
                android:id="@+id/history_short_category_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1.1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@{viewModel.categoryName}"
                android:textColor="@color/blackColor"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/history_expense_value"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:gravity="end"
                android:singleLine="true"
                android:text="@{viewModel.expenseValue}"
                android:textAlignment="gravity"
                android:textColor="@color/blackColor"
                android:textSize="24dp" />

            <!--            android:textAlignment="textEnd"-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.2"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=" zł"
                android:textColor="@color/blackColor"
                android:textSize="24dp" />

        </LinearLayout>
        <!--android:imeOptions="actionNext"-->
        <!-- create a Linear Layout with horizontal orientation and weightSum property -->
        <!-- second Child Layout -->

        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


        </LinearLayout>

        <LinearLayout
            android:id="@+id/summaryExpenseFullDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/history_fifth_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Opis"
                    android:textColor="@color/blackColor" />


                <TextView
                    android:id="@+id/history_description"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.5"
                    android:background="@color/editTextBack"
                    android:gravity="center_vertical"
                    android:hint="brak opisu"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="@{viewModel.description}"
                    android:textColor="@color/blackColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/history_six_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Data"
                    android:textColor="@color/blackColor" />


                <TextView
                    android:id="@+id/history_date"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.5"
                    android:background="@color/editTextBack"
                    android:gravity="center_vertical"
                    android:hint="data"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:text="@{viewModel.date}"
                    android:textColor="@color/blackColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/edit_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/greenColor"
                    android:text="Edytuj"
                    android:textColor="@color/blackColor" />

<!--                    android:onClick="@{ () -> viewModel.editExpense()}"-->
<!--                android:onClick="@{ () -> viewModel.removeExpense()}"-->

                <Button
                    android:id="@+id/delete_expense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@color/redColor"
                    android:text="Usuń"
                    android:textColor="@color/blackColor" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="5px"
                android:layout_weight="2"
                android:background="@color/greenColor"
                android:textColor="@color/whiteColor" />
        </LinearLayout>
    </LinearLayout>

</layout>