<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mateuszcholyn.wallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=""
        >
        <activity
            android:name=".expense.activity.AverageExpenseActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".expense.activity.ExpenseHistoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".category.activity.CategoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".expense.activity.AddExpenseActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DisplayMessageActivity"
            android:parentActivityName=".MainActivity" />
    </application>


</manifest>