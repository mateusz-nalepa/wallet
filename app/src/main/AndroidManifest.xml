<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mateuszcholyn.wallet">
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".config.ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".domain.moneysaver.activity.MoneySaverActivity"></activity>
        <activity
            android:name="com.mateuszcholyn.wallet.domain.expense.activity.AverageExpenseActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.mateuszcholyn.wallet.domain.expense.activity.ExpenseHistoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.mateuszcholyn.wallet.domain.category.activity.CategoryActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name="com.mateuszcholyn.wallet.domain.expense.activity.AddExpenseActivityBinding"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:parentActivityName=".MainActivity" />

    </application>


</manifest>